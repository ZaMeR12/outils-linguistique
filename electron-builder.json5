// @see - https://www.electron.build/configuration/configuration
{
  $schema: "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  appId: "outils_linguistiques_zam",
  asar: true,
  productName: "Outils Linguistiques",
  copyright: "Copyright Â© 2025 ZaMeR_12",
  directories: {
    output: "release/${version}",
  },
  files: ["dist/**", "dist-electron/**", "public/favicon.ico"],
  mac: {
    target: ["dmg"],
    artifactName: "${productName}-Mac-${version}-Installer.${ext}",
  },
  win: {
    target: ["nsis", "zip", "7z"],
    icon: "public/favicon.ico",
    artifactName: "${productName}-Windows-${version}-Setup.${ext}",
  },
  nsis: {
    oneClick: false,
    createDesktopShortcut: true,
    perMachine: false,
    allowToChangeInstallationDirectory: true,
    deleteAppDataOnUninstall: true,
  },
  linux: {
    target: ["tar.gz", "appImage"],
    artifactName: "${productName}-Linux-${version}.${ext}",
    icon: "public/icon-512.png",
    category: "Utility",
    maintainer: "ZaMeR12 <zamer12.dev@pm.me>",
    desktop: {
      Name: "Outils Linguistiques",
      Comment: "Application linguistique",
    },
  },
  publish: {
    provider: "github",
    owner: "ZaMeR12",
    repo: "outils-linguistiques",
    releaseType: "draft",
  },
}
